generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserEntity {
  id        String           @id @map("id")
  favorites FavoriteEntity[]

  @@map("users")
}

model MovieEntity {
  id        String           @id @default(cuid()) @map("id")
  title     String          @map("title")
  img       String          @map("img")
  imdb_id   String          @unique @map("imdb_id")
  favorites FavoriteEntity[]

  @@map("movies")
}

model FavoriteEntity {
  id       String      @id @default(cuid()) @map("id")
  user_id  String      @map("user_id")
  movie_id String      @map("movie_id")
  user     UserEntity  @relation(fields: [user_id], references: [id])
  movie    MovieEntity @relation(fields: [movie_id], references: [id])

  @@map("favorites")
}